style "notify-window"
{
    XfceNotifyWindow::summary-bold = 1
    # Randfarbe: Unsichtbar oder eine dunkle Farbe, um den Rahmen zu integrieren.
    XfceNotifyWindow::border-color = "#404040"
    XfceNotifyWindow::border-color-hover = "#749651"
    XfceNotifyWindow::border-radius = 10.0
    XfceNotifyWindow::border-width = 0.1
    XfceNotifyWindow::border-width-hover = 0.1
    # Hintergrund: Haupt-Hintergrundfarbe des Themes
    bg[NORMAL] = "#383838"
}

style "notify-button"
{
    # Hintergrund Normal: Haupt-Hintergrundfarbe
    bg[NORMAL] = "#383838"
    # Hintergrund Hover: Leichter Kontrast (z.B. eine etwas hellere Variante)
    bg[PRELIGHT] = "#404040"
    # Hintergrund Aktiv/Gedr체ckt: Akzentfarbe des Themes
    bg[ACTIVE] = "#749651"
    # Textfarbe: Haupt-Textfarbe
    fg[NORMAL] = "#eeeeee"
    fg[PRELIGHT] = "#eeeeee"
    engine "murrine" {
    border_shades = { 2.9, 2.6 }
    shadow_shades = {2.4,2.4}
        roundness = 4
    }
}

style "notify-text"
{
    # Textfarbe: Haupt-Textfarbe
    fg[NORMAL] = "#eeeeee"
    fg[PRELIGHT] = "#eeeeee"
    # Link-Farbe: Kann eine eigene Akzentfarbe sein, hier wurde die inaktive Graustufe oder eine themen체bliche Link-Farbe gew채hlt
    GtkWidget::link-color = "#42adc0"
}

style "notify-summary"
{
    font_name = "Bold"
}

style "notify-progressbar"
{
    GtkProgressBar::min-horizontal-bar-height = 4
    xthickness    = 0
    ythickness    = 0

    # Vordergrund (Text im Progressbar): Sollte auf dunklem Akzent-Hintergrund sichtbar sein
    fg[PRELIGHT] = "#ffffff"
    # Hintergrund der leeren Leiste: Eine dunkle Basis, vielleicht Base Color
    bg[NORMAL]    = "#404040"
    bg[SELECTED] = "#404040"
    # Farbe der gef체llten Leiste: Akzentfarbe des Themes
    bg[ACTIVE]    = "#749651"

    engine "murrine" {
        gradient_shades = { 1.0, 1.0, 1.0, 1.0 }
        contrast    = 0.5
        border_shades    = { 0.9, 0.9 }
        progressbarstyle    = 0
    }
}

class "XfceNotifyWindow" style "notify-window"
widget "XfceNotifyWindow.*.summary" style "notify-summary"
widget_class "XfceNotifyWindow.*<GtkButton>" style "notify-button"
widget_class "XfceNotifyWindow.*.<GtkLabel>" style "notify-text"
widget_class "XfceNotifyWindow.*.<GtkProgress>" style "notify-progressbar"
widget_class "XfceNotifyWindow.*.<GtkProgressBar>" style "notify-progressbar"
